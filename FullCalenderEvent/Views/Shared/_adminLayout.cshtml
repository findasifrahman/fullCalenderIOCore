<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DNT Calender Event</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="color:yellow">@Html.ActionLink("Event Calender", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:Yellow" })</li>
                    <li>@Html.ActionLink("Add Event", "Index", "eventDdays")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="throbber" style="display:none; min-height:80px;"></div>
    <div id="noty-holder"></div>
    <div id="wrapper">

        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav side-nav">
                <li>
                    <a href="/eventDdays/index" style="color:white;font-weight:bolder;"><i class="fa fa-fw fa-fw"></i>Event List<i class="fa fa-fw fa-angle-down pull-right"></i></a>
                </li>
               @* <li>
                    <a href="#" data-toggle="collapse" data-target="#submenu-1" style="color:white;font-weight:bolder;"><i class="fa fa-fw fa-fw"></i>Add Event<i class="fa fa-fw fa-angle-down pull-right"></i></a>
                    <ul id="submenu-1" class="collapse">
                        <li><a href="/eventDdays/Create?ename=DDNT"><i class="fa fa-angle-double-right"></i>DDNT</a></li>
                        <li><a href="/eventDdays/Create?ename=SOTI"><i class="fa fa-angle-double-right"></i>SO(T)-I</a></li>
                        <li><a href="/eventDdays/Create?ename=SOTII"><i class="fa fa-angle-double-right"></i>SO(T)-II</a></li>
                        <li><a href="/eventDdays/Create?ename=OICTDEC"><i class="fa fa-angle-double-right"></i>OIC-TDEC</a></li>
                        <li><a href="/eventDdays/Create?ename=PA"><i class="fa fa-angle-double-right"></i>PA</a></li>
                    </ul>
                </li>*@
                <li>
                    <a href="/eventFiles/index"   style="color:white;font-weight:bolder;"><i class="fa fa-fw fa-fw"></i>Event File List<i class="fa fa-fw fa-angle-down pull-right"></i></a>
                </li>

            </ul>
        </div>

        <!-- /#page-wrapper -->
    </div><!-- /#wrapper -->
    <div class=" body-content" >
        <div style="margin-left:150px">
        @RenderBody()
        </div>
        <hr />
        <footer style="background-color:dimgray;color:whitesmoke;text-align:center;height:80px">
            <br />
            <p style="font-size:small">DNT -- Bangladesh NAVY</p>
            <p style="font-size:smaller;color:yellow">&copy; @DateTime.Now.Year - Intricate LAB</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link rel="stylesheet" href="~/Content/bootstrap-select.min.css">
    <script src="~/Scripts/bootstrap-select.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/i18n/defaults-*.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

