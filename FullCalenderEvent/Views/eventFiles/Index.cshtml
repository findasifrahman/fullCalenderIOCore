@model PagedList.IPagedList<FullCalenderEvent.Models.eventFiles>
@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewBag.Title = "Index";
}
<div class="container" style="padding-left:30px">
    <h2 style="text-align:center;color:cornflowerblue;font-weight:bold">List of Files</h2>

    <p>
        @Html.ActionLink("Create New", "Create",null, new { @style = "padding:5px 10px;", @class = "btn btn-info" })
    </p>
    <br />
    @using (Html.BeginForm("Index", "eventFiles"))
    {
        <p>
            Find by Event: @Html.TextBox("SearchString")
            <input type="submit" value="Search By Event" class="btn btn-info" />
        </p>
    }
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Event Name
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @style = "padding:5px 10px;background-color:black", @class = "btn btn-info" }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @style = "padding:5px 10px;background-color:black", @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @style = "padding:5px 10px;background-color:black", @class = "btn btn-info" })
            </td>
        </tr>
    }

    </table>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>